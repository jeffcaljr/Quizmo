<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
   <android.support.v7.widget.SearchView
     android:id="@+id/quiz_search_view"
     android:queryHint="Quiz Name"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:iconifiedByDefault="true"
     android:layout_centerHorizontal="true"
     android:background="@drawable/search_view_background"></android.support.v7.widget.SearchView>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/quizzes_recycler_view"
       android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/quiz_search_view"
     android:layout_alignParentBottom="true"></android.support.v7.widget.RecyclerView>
</RelativeLayout>