    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#93000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:contentPadding="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/login_top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:src="@drawable/quizmo_logo"
                    android:scaleType="fitCenter"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="42dp">
                <EditText
                    android:id="@+id/user_id_field"
                    android:drawableLeft="@drawable/ic_user"
                    android:maxLines="1"
                    android:hint="Username"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:drawablePadding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:imeOptions="actionDone"
                    />

                <EditText
                    android:id="@+id/password_field"
                    android:drawableLeft="@drawable/ic_password"
                    android:maxLines="1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:enabled="false"
                    android:drawablePadding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/user_id_field"
                    android:layout_marginTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    />

                <info.hoang8f.widget.FButton
                  android:id="@+id/login_button"
                  android:text="Login"
                  android:padding="16dp"
                  android:paddingBottom="8dp"
                  android:paddingTop="8dp"
                  android:layout_width="match_parent"
                  android:textColor="@color/colorWhite"
                  android:textSize="24sp"
                  android:layout_height="56dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@id/password_field"
                  android:layout_marginTop="16dp"
                  fbutton:buttonColor="@color/jccolorBrightButton"
                  fbutton:shadowEnabled="true"
                  fbutton:shadowHeight="5dp"
                  fbutton:cornerRadius="10dp" />

                <!--<Button-->
                <!--android:id="@+id/login_button"-->
                <!--android:text="Login"-->
                <!--android:padding="16dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@drawable/button_rounded_edges"-->
                <!--android:elevation="10dp"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="18sp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:layout_marginRight="8dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_below="@id/password_field"-->
                <!--android:layout_marginTop="16dp"-->
                <!--style="@android:style/Widget.DeviceDefault.Button.Inset"/>-->
            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>