<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:contentPadding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/answer_value"
                android:paddingLeft="8dp"
                android:textColor="@color/colorAnswerFragmentQuestionValue"
                android:text="."
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:id="@+id/decrement_points_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down"
                android:layout_gravity="center"
                android:baselineAlignBottom="true"
                android:background="@null"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/points_allocated"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="24dp" />


            <ImageButton
                android:id="@+id/increment_points_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/up"
                android:background="@null"
                android:baselineAlignBottom="true"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- The textview should probably be inside a scrollview -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<ImageView-->
                <!--android:id="@+id/back_scroll_image"-->
                <!--android:src="@drawable/back"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_margin="8dp"
                        android:id="@+id/answer_textview"
                        android:text="@string/lorem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </ScrollView>
            </LinearLayout>

            <!--<ImageView-->
                <!--android:id="@+id/forward_scroll_image"-->
                <!--android:src="@drawable/forward"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent" />-->

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>