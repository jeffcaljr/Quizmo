<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/previous_question_available_indicator"
        android:background="@drawable/previous_question_indicator_selector"
        android:enabled="false"
        android:layout_marginBottom="4dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <fr.castorflex.android.verticalviewpager.VerticalViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/previous_question_available_indicator"
        android:layout_above="@+id/submit_button">
        ></fr.castorflex.android.verticalviewpager.VerticalViewPager>

    <!--<FrameLayout-->
        <!--android:id="@+id/question_fragment_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--&gt;-->
        <!--<include-->
            <!--layout="@layout/fragment_question_card">-->

        <!--</include>-->
    <!--</FrameLayout>-->

    <Button
        android:id="@+id/next_question_available_indicator"
        android:background="@drawable/next_question_indicator_selector"
        android:layout_marginBottom="4dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/submit_button"
        android:text="Submit"
        android:visibility="invisible"
        style="Button"
        android:background="@color/colorPrimaryBright"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
