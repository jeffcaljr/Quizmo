<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true">
        <layer-list>
            <item
                android:bottom="3dp"
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">

                <shape android:shape="rectangle">
                    <stroke
                        android:width="3dp"
                        android:color="#87CEFA"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_focused="false">
        <layer-list>
            <item
                android:bottom="3dp"
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">

                <shape android:shape="rectangle">
                    <stroke
                        android:width="3dp"
                        android:color="#FFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>