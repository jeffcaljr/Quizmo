<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/disableGrey"
                android:endColor="@color/disableShadow"
                android:angle="90"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="3dip"
                android:color="#FFFFFF" />
            <corners android:radius= "@dimen/buttonRadius" />

        </shape>
    </item>
    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/BackgroundShadow"
                android:centerColor="@color/BackgroundExtraShadow"
                android:endColor="@color/BackgroundShadow"
                android:angle="90"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="3dip"
                android:color="#FFFFFF" />
            <corners android:radius= "@dimen/buttonRadius" />
        </shape>
    </item>
    <item
        android:state_focused="true"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/BackgroundShadow"
                android:endColor="@color/Background"
                android:angle="90"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="3dip"
                android:color="#FFFFFF" />
            <corners android:radius= "@dimen/buttonRadius" />
        </shape>
    </item>
    <item
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/BackgroundShadow"
                android:endColor="@color/Background"
                android:angle="90"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="3dip"
                android:color="#FFFFFF" />
            <corners android:radius= "@dimen/buttonRadius" />
        </shape>
    </item>
</selector>